{
  "name": "tota11y chrome extension",
  "version": "0.7.5",
  "manifest_version": 2,
  "description": "Use tota11y everywhere without making it a project dependency.",
  "icons": {
    "128": "src/img/logo.png"
  },
  "browser_action": {
    "default_icon": "src/img/logo.png",
    "default_title": "tota11y"
  },
  "content_scripts": [{
    "matches": [
      "https://*/*",
      "http://*/*"
    ],
    "js": ["src/js/tota11y.min.js", "src/js/jquery.min.js", "src/js/content.js"]
  }],
  "background": {
    "scripts": ["src/js/background.js"]
  },
  "permissions": [
    "activeTab"
  ]
}